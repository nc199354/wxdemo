/* pages/list/list.wxss */
.item{
  position: relative;
  height: 140rpx;
  padding: 0 20rpx;
  padding-left: 160rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-top: 10rpx;
}
.item image{
  position: absolute;
  width: 120rpx;
  height: 100rpx;
  left: 20rpx;
  top:50%;
  margin-top: -50rpx;
}
.noList{
  text-align: center;
  line-height: 3;
  color:#c4c4c4;
}
.cls text{
  font-size: 12px;
  margin-right: 10rpx;
  background: #f39800;
  color:#fff;
  padding: 5rpx 10rpx;
  border-radius: 5px;
}